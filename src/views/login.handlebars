<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          Iniciar sesión
        </div>
        <div class="card-body">
          <form action="" id="loginForm">
            <div class="form-group">
              <label for="email">Correo electrónico</label>
              <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp"
                placeholder="Ingrese su correo electrónico" required />
              <small id="emailHelp" class="form-text text-muted">Nunca
                compartiremos su correo electrónico con nadie más.</small>
            </div>
            <div class="form-group">
              <label for="password">Contraseña</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="Contraseña"
                required />
            </div>
            <div style="text-align: center;">
              <button type="submit" class="btn btn-primary">Iniciar sesión</button>
            </div>
            <hr/>
            <div style="text-align: center;">
              <p>Aún no estas registrado? Haz clic y registrate!</p>
              <input type="button" class="btn btn-danger" value="Registrarme" id="signupButton" />
            </div>
            <hr/>
            <div style="text-align: center;">
              <p>Olvidaste tu password? Haz clic y cambiala!</p>
              <input type="button" class="btn btn-info" value="Restablecer Password" id="restartPassButton" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>
